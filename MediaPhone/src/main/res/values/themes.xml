<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Theme.MediaPhone.Root" parent="Theme.AppCompat.DayNight.DarkActionBar">
		<!-- action bar background and widget tinting-->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="alertDialogTheme">@style/Theme.MediaPhone.AlertDialog</item>
	</style>

	<style name="Theme.MediaPhone" parent="Theme.MediaPhone.Root" />

	<style name="Theme.MediaPhone.OverlayActionBar" parent="Theme.MediaPhone">
		<item name="windowActionBarOverlay">true</item>
	</style>

	<style name="Theme.MediaPhone.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
		<item name="colorAccent">@color/accent</item>
	</style>
</resources>
