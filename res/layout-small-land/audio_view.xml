<?xml version="1.0" encoding="utf-8"?>
<!-- NOTE: layout-land/audio_view.xml is a direct copy to ensure proper diplay; update both if editing -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:util="http://util.robinson.ac/schema"
    android:id="@+id/audio_view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="handleButtonClicks" > <!-- onClick so that clicking the audio background re-takes the audio -->

    <LinearLayout
        android:id="@+id/audio_preview_controls"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_button_height"
        android:layout_alignParentBottom="true" >

        <ac.robinson.view.CenteredImageTextButton
            android:id="@+id/button_finished_audio"
            style="@style/default_coloured_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_revert" />

        <ac.robinson.view.CenteredImageTextButton
            android:id="@+id/button_delete_audio"
            style="@style/default_coloured_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_delete"
            util:filterColorDefault="@color/button_red_default"
            util:filterColorTouched="@color/button_red_touched" />

        <ac.robinson.view.CenteredImageTextButton
            android:id="@+id/button_playback_import_audio"
            style="@style/default_coloured_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_menu_audio" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/audio_preview_container"
        style="@style/default_vertical_linear_layout"
        android:layout_above="@id/audio_preview_controls"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/audio_preview_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/audio_playback_icon_description"
            android:paddingBottom="@dimen/media_controller_height"
            android:paddingLeft="@dimen/audio_preview_icon_padding"
            android:paddingRight="@dimen/audio_preview_icon_padding"
            android:src="@null" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp" >

        <View
            android:id="@+id/audio_recording_view_nav_strut"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <!-- left here so we don't need to detect orientation for button hiding code -->

    </RelativeLayout>

    <View
        android:id="@+id/audio_landscape_strut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/audio_recording"
        style="@style/default_vertical_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/audio_landscape_strut"
        android:background="@android:color/black" >

        <ac.robinson.mediaphone.view.VUMeter
            android:id="@+id/vu_meter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/audio_recording_progress"
            style="@style/default_audio_status_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/audio_recording_controls"
        style="@style/default_vertical_linear_layout"
        android:layout_alignLeft="@id/audio_landscape_strut"
        android:layout_alignParentRight="true" >

        <ac.robinson.view.CenteredImageTextButton
            android:id="@+id/button_record_audio"
            style="@style/default_coloured_button"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_record"
            util:filterColorDefault="@color/button_blue_default"
            util:filterColorTouched="@color/button_blue_touched" />

        <ac.robinson.view.CenteredImageTextButton
            android:id="@+id/button_add_frame_audio"
            style="@style/default_coloured_button"
            android:layout_height="@dimen/navigation_button_height"
            android:drawableTop="@android:drawable/ic_menu_add" />

        <ac.robinson.view.CenteredImageTextButton
            android:id="@+id/button_cancel_recording"
            style="@style/default_coloured_button"
            android:layout_height="@dimen/navigation_button_height"
            android:drawableTop="@android:drawable/ic_menu_revert" />
    </LinearLayout>

</RelativeLayout>