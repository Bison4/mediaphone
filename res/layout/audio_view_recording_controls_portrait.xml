<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:util="http://util.robinson.ac/schema" >

    <RelativeLayout
        android:id="@+id/audio_recording_controls"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_button_height"
        android:layout_alignParentBottom="true" >

        <View
            android:id="@+id/audio_recording_view_nav_strut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />
        <!-- this strut is a hack to avoid using nested layout weights - see: http://stackoverflow.com/a/7784186 -->

        <ac.robinson.view.CenteredImageTextButton
            android:id="@+id/button_cancel_recording"
            style="@style/default_coloured_button"
            android:layout_width="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@id/audio_recording_view_nav_strut"
            android:drawableTop="@android:drawable/ic_menu_revert" />

        <ac.robinson.view.CenteredImageTextButton
            android:id="@+id/button_add_frame_audio"
            style="@style/default_coloured_button"
            android:layout_width="0dp"
            android:layout_alignLeft="@id/audio_recording_view_nav_strut"
            android:layout_alignParentRight="true"
            android:drawableTop="@android:drawable/ic_menu_add" />
    </RelativeLayout>

</merge>
