<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:util="http://util.robinson.ac/schema"    android:id="@+id/frame_editor_root"    style="@style/default_horizontal_linear_layout" >    <ac.robinson.view.CenteredImageTextButton        android:id="@+id/button_take_picture_video"        style="@style/default_coloured_button"        android:layout_width="0dp"        android:layout_weight="2"        android:drawableTop="@android:drawable/ic_menu_camera"        util:filterColorDefault="@color/button_green_default"        util:filterColorTouched="@color/button_green_touched" />    <LinearLayout        style="@style/default_vertical_linear_layout"        android:layout_width="0dp"        android:layout_height="match_parent"        android:layout_weight="3" >        <LinearLayout            style="@style/default_horizontal_linear_layout"            android:layout_height="0dp"            android:layout_weight="1" >            <ac.robinson.view.CenteredImageTextButton                android:id="@+id/button_record_audio_1"                style="@style/default_coloured_button"                android:layout_width="0dp"                android:layout_weight="1"                android:drawableTop="@drawable/ic_menu_audio"                util:filterColorDefault="@color/button_blue_default"                util:filterColorTouched="@color/button_blue_touched" />            <ac.robinson.view.CenteredImageTextButton                android:id="@+id/button_record_audio_2"                style="@style/default_coloured_button"                android:layout_width="0dp"                android:layout_weight="1"                android:drawableTop="@drawable/ic_menu_audio"                util:filterColorDefault="@color/button_blue_default"                util:filterColorTouched="@color/button_blue_touched" />            <ac.robinson.view.CenteredImageTextButton                android:id="@+id/button_record_audio_3"                style="@style/default_coloured_button"                android:layout_width="0dp"                android:layout_weight="1"                android:drawableTop="@drawable/ic_menu_audio"                util:filterColorDefault="@color/button_blue_default"                util:filterColorTouched="@color/button_blue_touched" />        </LinearLayout>        <ac.robinson.view.CenteredImageTextButton            android:id="@+id/button_add_text"            style="@style/default_coloured_button"            android:layout_height="0dp"            android:layout_weight="0.8"            android:drawableTop="@android:drawable/ic_menu_edit"            util:filterColorDefault="@color/button_yellow_default"            util:filterColorTouched="@color/button_yellow_touched" />        <LinearLayout            style="@style/default_horizontal_linear_layout"            android:layout_height="@dimen/navigation_button_height" >            <ac.robinson.view.CenteredImageTextButton                android:id="@+id/button_finished_editing"                style="@style/default_coloured_button"                android:layout_width="0dp"                android:layout_weight="1"                android:drawableTop="@android:drawable/ic_menu_revert" />            <ac.robinson.view.CenteredImageTextButton                android:id="@+id/button_delete_frame"                style="@style/default_coloured_button"                android:layout_width="0dp"                android:layout_weight="1"                android:drawableTop="@android:drawable/ic_menu_delete"                util:filterColorDefault="@color/button_red_default"                util:filterColorTouched="@color/button_red_touched" />            <ac.robinson.view.CenteredImageTextButton                android:id="@+id/button_add_frame_editor"                style="@style/default_coloured_button"                android:layout_width="0dp"                android:layout_weight="1"                android:drawableTop="@android:drawable/ic_menu_add" />        </LinearLayout>    </LinearLayout></LinearLayout>